<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>

    <class name="in.sp.beans.Student" table="student_details">
        
        <id name="id" column="std_id" />
        <property name="name" column="std_name" />
        <property name="email" column="std_email" />
        <property name="gender" column="std_gender" />
        <property name="city" column="std_city" />
        
    </class>

</hibernate-mapping>